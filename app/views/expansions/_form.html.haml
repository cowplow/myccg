- if @expansion.errors.any?
  = render 'shared/error_messages', obj: @expansion
%section#expansion-form-container
  .row
    .col-sm-10.col-sm-offset-1
      = bootstrap_form_for @expansion, html: { class: "form-horizontal" } do |f|
        %header
          %h1 Please enter the expansion name
        %fieldset#expansion_inputs
          = f.text_field :name, label: "Expansion Name"
        %fieldset.actions.control-group.col-sm-1.controls
          %input( type="submit" value="Submit" class="btn btn-primary" )