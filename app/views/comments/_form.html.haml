%section#comment-form-container
  .row
    .col-sm-10.col-sm-offset-1
      = bootstrap_form_for [@card, @comment], html: { class: "form-horizontal" } do |f|
        %header
          %h2 Comments
        %fieldset#comment_inputs
          = render 'shared/error_messages', obj: @comment
          = f.text_area :body, label: "Add a comment"
        %fieldset.actions.control-group.col-sm-1.controls
          %input( type="submit" value="Add Comment" class="btn btn-primary" )