        - if !logged_in?
          %li
            = link_to register_path do
              Sign Up
              %span.glyphicon.glyphicon-user
          %li
            = link_to sign_in_path do
              Login
              %span.glyphicon.glyphicon-log-in
        - else
          %li
            = link_to sign_out_path do
              Logout
              %span.glyphicon.glyphicon-log-out