%section#sign-in-container
  .row
    .col-sm-10.col-sm-offset-1
      = bootstrap_form_tag url: '/sign_in', html: { class: "form-horizontal", role: "form" } do |f|
        %header
          %h1 Sign In!
        %fieldset#sign_in_inputs
          = f.text_field :username, label: "Username"
          = f.password_field :password
        %fieldset.actions.control-group.controls
          %input( type="submit" value="Sign In" class="btn btn-primary" )