- if @card_type.errors.any?
  = render 'shared/error_messages', obj: @card_type
%section#card_type-form-container
  .row
    .col-sm-10.col-sm-offset-1
      = bootstrap_form_for @card_type, html: { class: "form-horizontal" } do |f|
        %header
          %h1 Please enter the card type
        %fieldset#card_type_inputs
          = f.text_field :name, label: "Card Type"
        %fieldset.actions.control-group.col-sm-1.controls
          %input( type="submit" value="Submit" class="btn btn-primary" )