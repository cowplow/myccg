- if @card_subtype.errors.any?
  = render 'shared/error_messages', obj: @card_subtype
%section#card_subtype-form-container
  .row
    .col-sm-10.col-sm-offset-1
      = bootstrap_form_for @card_subtype, html: { class: "form-horizontal" } do |f|
        %header
          %h1 Please enter the card sub-type
        %fieldset#subtype_inputs
          = f.text_field :name, label: "Subtype"
        %fieldset.actions.control-group.col-sm-1.controls
          %input( type="submit" value="Submit" class="btn btn-primary" )