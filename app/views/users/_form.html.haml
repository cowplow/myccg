- if @user.errors.any?
  = render 'shared/error_messages', obj: @user
%section#register-container
  .row
    .col-sm-10.col-sm-offset-1
      = bootstrap_form_for @user, html: { class: "form-horizontal" } do |f|
        %header
          %h1 Please enter your full name, username, and password
        %fieldset#user_inputs
          = f.text_field :name, label: "Your Name"
          = f.text_field :username, label: "Desired Username"
          = f.password_field :password
          - if current_user && current_user.is_admin?
            = f.number_field :authority, label: "Authority"
        %fieldset.actions.control-group.col-sm-1
          .controls
            %input(type="submit" value="Submit" class="btn btn-primary")