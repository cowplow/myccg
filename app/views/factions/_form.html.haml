- if @faction.errors.any?
  = render 'shared/error_messages', obj: @card_type
%section#faction-form-container
  .row
    .col-sm-10.col-sm-offset-1
      = bootstrap_form_for @faction, html: { class: "form-horizontal" } do |f|
        %header
          %h1 Please enter
        %fieldset#faction_inputs
          = f.text_field :name, label: "Faction Name"
          = f.text_field :color, label: "Hex Color Code"
        %fieldset.actions.control-group.col-sm-1.controls
          %input( type="submit" value="Submit" class="btn btn-primary" )